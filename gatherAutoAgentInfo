#!/bin/bash
file_output="gatherAgentInfo-$(hostname -f)-$(date +%F).txt"
echo "===BEGIN===" >> "$file_output"
echo -e "\n==ls1==" >> "$file_output"
ls -alh /opt/mongodb-mms-automation/bin/ >> "$file_output"
echo -e "\n==ls2==" >> "$file_output"
ls -alh /opt/mongodb-mms-automation/versions/ >>  "$file_output"
echo -e "\n==ps1==" >> "$file_output"
ps aux | grep mongodb-mms-automation >> "$file_output"
echo -e "\n===END===" >> "$file_output"
echo "Please Copy the "$file_output" file to your Jira or SF ticket"
echo "Please attach gatherAgentInfo-$(hostname -f)-$(date +%F).txt to your support ticket"
